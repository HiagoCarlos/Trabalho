<header class="bg-primary text-white py-3 shadow-sm">
  <div class="container d-flex justify-content-between align-items-center flex-wrap gap-3">

    <!-- Logo -->
    <div class="d-flex align-items-center gap-2">
      <i class="bi bi-check2-square fs-4"></i>
      <h1 class="h5 m-0 fw-semibold">Task Manager</h1>
    </div>

    <!-- UsuÃ¡rio + Logout -->
    <div class="d-flex align-items-center gap-4 flex-wrap">

      <!-- Avatar e nome -->
      <% if (session?.user?.profile?.name) { %>
        <div class="d-flex align-items-center gap-2">
          <div class="rounded-circle bg-white text-primary fw-bold d-flex justify-content-center align-items-center shadow"
               style="width: 38px; height: 38px;">
            <%= session.user.profile.name[0].toUpperCase() %>
          </div>
          <span class="fw-medium"><%= session.user.profile.name %></span>
        </div>
      <% } %>

      <!-- BotÃ£o sair -->
      <form action="/logout" method="POST" class="m-0">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit" class="btn btn-light btn-sm px-3 fw-semibold d-flex align-items-center gap-2">
          <i class="bi bi-box-arrow-right"></i> Sair
        </button>
      </form>

    </div>
  </div>
</header>
